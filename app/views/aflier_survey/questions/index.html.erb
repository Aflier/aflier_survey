<div class="row">
	<div class="col-md-12">
		<div class="page-header">
			<h1>Questions</h1>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-md-9">
		<table class="table">
		  <thead>
		    <tr>
          <th>Name</th>
          <th>Question type</th>
          <th>Question section</th>
          <th></th>
		    </tr>
		  </thead>
		
		  <tbody>
		    <% @questions.each do |question| %>
		      <tr>
            <td><%= question.name %></td>
            <td><%= question.question_type %></td>
            <td><%= question.question_section&.name %></td>
            <td>
		        	<div class="float-right btn-group">
			        	<%= link_to 'Show', question, class: "btn btn-secondary btn-sm" %>
			        	<%= link_to 'Edit', edit_question_path(question), class: "btn btn-secondary btn-sm" %>
			        	<%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
							</div>
		        </td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>
	<div class="col-md-3">
		<%= render 'form' %>
	</div>
</div>