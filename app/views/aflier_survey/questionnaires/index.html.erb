<div class="row">
	<div class="col-md-12">
		<div class="page-header">
			<h1>Questionnaires</h1>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-md-9">
		<table class="table">
		  <thead>
		    <tr>
          <th>Name</th>
          <th></th>
		    </tr>
		  </thead>
		
		  <tbody>
		    <% @questionnaires.each do |questionnaire| %>
		      <tr>
            <td><%= link_to questionnaire.name, edit_questionnaire_path(questionnaire) %></td>
            <td>
		        	<div class="float-right btn-group">
			        	<%= link_to 'Destroy', questionnaire, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %>
							</div>
		        </td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>
	<div class="col-md-3">
		<%= render 'form' %>
	</div>
</div>