<% if @show_required %>
  $('#main-panel').replaceWith('<%= j render 'aflier_survey/questionnaires/questionnaire', questionnaire: @questionnaire, user: @user %>');
  $('#answer-required').modal('show');
<% else %>
  $('#submissions-bar').replaceWith('<%= j render 'aflier_survey/questionnaires/submission_bar', questionnaire: @questionnaire, unique_ident: @unique_ident, user: @user %>');
<% end %>

<% if @scroll_to_top %>
$('html, body').animate({
    scrollTop: 0
}, 800);
<% end %>

setTimeout(function(){
    $('#waiting').modal('hide');
}, 1000);
