<div class="text-center mt-5" id="submissions-bar" data-aflier-survey-target="submitBar">

  <% if submitted %>
    <div class="btn btn-success btn-lg disabled" style="margin-bottom: 2em;">
      Submitted!
    </div>
    <%= raw questionnaire.thank_you %>
  <% elsif questionnaire.is_saved?(unique_ident) %>
    <span class="btn btn-outline-primary btn-lg disabled">Saved!</span>
    <% if questionnaire.include_submit %>
      <span data-questionnaire-target="submit" data-action="click->aflier-survey#submit">
      <%= link_to AflierSurvey.configuration.submit_button_text ? AflierSurvey.configuration.submit_button_text : "Save and Submit",
                  aflier_survey.submit_questionnaire_path(questionnaire, unique_ident: unique_ident),
                  id: "save-and-submit",
                  class: "btn btn-primary btn-lg",
                  remote: true %>
      </span>
    <% end %>
  <% else %>
    <%= link_to AflierSurvey.configuration.save_button_text ? AflierSurvey.configuration.save_button_text : 'Save', aflier_survey.save_questionnaire_path(questionnaire, unique_ident: unique_ident), class: "btn btn-primary btn-lg", remote: true %>
    <% if questionnaire.include_submit %>
      <span data-questionnaire-target="submit" data-action="click->aflier-survey#submit">
      <%= link_to AflierSurvey.configuration.submit_button_text ? AflierSurvey.configuration.submit_button_text : "Save and Submit",
                  aflier_survey.submit_questionnaire_path(questionnaire, unique_ident: unique_ident),
                  id: "save-and-submit",
                  class: "btn btn-primary btn-lg",
                  remote: true %>
      </span>
    <% end %>
  <% end %>

</div>