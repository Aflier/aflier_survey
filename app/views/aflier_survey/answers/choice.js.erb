<% if @repeat_section %>
  $('#question-<%= @repeat_section.id %>-<%= @question.id %>').replaceWith('<%= j render 'repeat_sections/question', questionnaire: @questionnaire, repeat_section: @repeat_section, question: @question, answer: @answer %>');
<% else %>
  $('#question-<%= @question.id %>').replaceWith('<%= j render 'questions/question', questionnaire: @questionnaire, question: @question, answer: @answer, unique_ident: @unique_id, admin: current_user.admin %>');
  $('#following-section-<%= @question.question_section.id %>').replaceWith('<%= j render '/question_sections/following_section', questionnaire: @questionnaire, question_section: @question.question_section, unique_ident: @unique_id, admin: current_user.admin %>');
<% end %>

$('#submissions-bar').replaceWith('<%= j render '/questionnaires/submission_bar', questionnaire: @questionnaire, unique_ident: @unique_id %>');
$('#complete-<%= @question_section.id %>').fadeOut('500');
$('#card-footer-<%= @question_section.id %>').replaceWith('<%= j render '/question_sections/card_footer', question_section: @question_section, unique_ident: @unique_id, questionnaire: @questionnaire %>');