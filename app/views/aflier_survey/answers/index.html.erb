<p id="notice"><%= notice %></p>

<h1>Answers</h1>

<table class="table">
  <thead>
    <tr>
      <th>Question</th>
      <th>Unique Ident</th>
      <th>A string</th>
      <th>A decimal</th>
      <th>An integer</th>
      <th>A date</th>
      <th>A time</th>
      <th>Repeat section</th>
      <th>A boolean</th>
      <th>Not sure</th>
      <th>File</th>
      <th>Other</th>
      <th>Complete</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.question_id %></td>
        <td><%= answer.unique_ident %></td>
        <td><%= answer.a_string %></td>
        <td><%= answer.a_decimal %></td>
        <td><%= answer.an_integer %></td>
        <td><%= answer.a_date %></td>
        <td><%= answer.a_time %></td>
        <td><%= answer.repeat_section_id %></td>
        <td><%= answer.a_boolean %></td>
        <td><%= answer.not_sure %></td>
        <td><%= answer.file %></td>
        <td><%= answer.other %></td>
        <td><%= answer.complete %></td>
        <td><%= link_to 'Show', answer %></td>
        <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
        <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
