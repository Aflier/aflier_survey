<div class="row">
  <div class="col-md-12">
    <div class="page-header">
      <h1>Repeat Sections</h1>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-9">
    <table class="table">
      <thead>
      <tr>
        <th>Question section</th>
        <th>User</th>
        <th></th>
      </tr>
      </thead>

      <tbody>
      <% @repeat_sections.each do |repeat_section| %>
        <tr>
          <td><%= repeat_section.question_section %></td>
          <td><%= repeat_section.unique_ident %></td>
          <td>
            <div class="float-right btn-group">
              <%= link_to 'Show', repeat_section, class: "btn btn-secondary btn-sm" %>
              <%= link_to 'Edit', edit_repeat_section_path(repeat_section), class: "btn btn-secondary btn-sm" %>
              <%= link_to 'Destroy', repeat_section, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %>
            </div>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-3">
    <%= render 'form' %>
  </div>
</div>