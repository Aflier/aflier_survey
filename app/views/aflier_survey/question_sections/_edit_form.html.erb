<button type="button" class="btn btn-outline-primary btn-sm" data-toggle="modal" data-target="#newquestion_section">Edit</button>

<div class="modal fade" id="newquestion_section" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <%= simple_form_for(@question_section) do |f| %>
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Edit Question section</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.input :restrict_controls %>
          <%= f.input :default_open %>
          <h4>Repeated Section</h4>
          <%= f.input :many %>
          <%= f.input :repeat_has_date  %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.button :submit, class: 'btn-primary' %>
        </div>
      </div>
    </div>
  <% end %>
</div>